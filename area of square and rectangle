#include <iostream>
using namespace std;

class Area {
public:
    void area(int side) {
        int squareArea = side * side;
        cout << "Area of the square: " << squareArea << endl;
    }
    void area(int length, int breadth) {
        int rectangleArea = length * breadth;
        cout << "Area of the rectangle: " << rectangleArea << endl;
    }
};

int main() {
    Area shape;
    shape.area(4);  
    shape.area(5, 3); 
    return 0;
}
