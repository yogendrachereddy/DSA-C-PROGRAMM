#include <iostream>
#include <cmath> 

using namespace std;

int main() {
    double num, squareRoot;

    cout << "Enter a non-negative number: ";
    cin >> num;
    if (num < 0) {
        cout << "Invalid input! Square root is not defined for negative numbers." << endl;
    } else {
        squareRoot = sqrt(num);
        cout << "The square root of " << num << " is " << squareRoot << endl;
    }

    return 0; 
}
