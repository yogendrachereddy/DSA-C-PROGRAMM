#include <iostream>
#include <cmath> 

using namespace std;

int main() {
    double num, cubeRoot;

    cout << "Enter a number: ";
    cin >> num;
    if (cin.fail()) {
        cout << "Invalid input! Please enter a valid number." << endl;
    } else {
        cubeRoot = cbrt(num);
        cout << "The cube root of " << num << " is " << cubeRoot << endl;
    }

    return 0;
}
